    },
    "type": "module",
    "main": "index.html",
    "scripts": {
        "all": "npm run build && npm run format && npm run lint && npm run typecheck",
        "build": "npm run build:database && npm run build:wasm && npm run build:vite",
        "build:dev": "npm run build && npm run build:devtool",
        "build:database": "python3 tools/generate_database.py",
        "build:devtool": "python3 tools/gen_devtools_json.py",
        "build:vite": "tsc -b && vite build",
        "build:wasm": "python3 tools/build_wasm.py",
        "dev": "vite",
        "format": "npm run format:js && npm run format:python",
        "format:js": "prettier . --write",
        "format:python": "isort . && black .",
        "lint": "eslint . --fix",
        "preview": "vite preview",
        "start": "vite start",
        "typecheck": "tsc --noEmit --incremental false"
    },
    "devDependencies": {
        "@eslint/js": "^9.32.0",
        "@types/emscripten": "^1.40.1",
        "@types/node": "^24.1.0",
        "@types/pako": "^2.0.3",
        "@types/react": "^19.1.9",
        "@types/react-dom": "^19.1.7",
        "@typescript-eslint/parser": "^8.38.0",
        "@vitejs/plugin-react": "^4.7.0",
        "autoprefixer": "^10.4.21",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-unused-imports": "^4.1.4",
        "globals": "^16.3.0",
        "pako": "^2.1.0",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "prettier-plugin-jsdoc": "^1.3.3",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-icons": "^5.5.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.38.0",
        "uuid": "^11.1.0",
        "vite": "^7.0.6"
    },
    "engines": {
        "node": ">=22"
    },
    "typeScriptVersion": "5.0"
}
